{
  "builds": [
    {
      "src": "mix.exs",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "priv/static"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
    "scripts": {
      "deploy": "npm run build && mix phx.digest"
    }
  }


